<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="edu.lawrence.elijahcauley.coreapp.OrientationHomeScreenActivity"
    android:background="#a1e183"
    android:weightSum="1">

    <TextView
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:id="@+id/orientation"
        android:background="#8fd4f3"
        android:textColor="#ffffff"
        android:autoText="false"
        android:allowUndo="true"
        android:text="@string/orientation_label"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_week_label"
        android:id="@+id/welcomeWeekButton"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:textSize="40dp"
        android:background="#4890fd"
        android:layout_marginTop="40dp"
        android:layout_weight="0.04"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:text="@string/fall_and_winter_term_label"
        android:id="@+id/fallAndWinterTermButton"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:textSize="40dp"
        android:background="#4890fd"
        android:layout_marginTop="40dp"
        android:layout_weight="0.04"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:text="@string/spring_term_label"
        android:id="@+id/springTermButton"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:textSize="40dp"
        android:background="#4890fd"
        android:layout_marginTop="40dp"
        android:layout_weight="0.04" />

</LinearLayout>
