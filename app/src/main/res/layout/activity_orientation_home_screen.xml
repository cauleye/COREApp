<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.lawrence.elijahcauley.coreapp.OrientationHomeScreenActivity"
    android:background="#a1e183"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orientation"
        android:background="#5cb3db"
        android:textColor="#ffffff"
        android:autoText="false"
        android:allowUndo="true"
        android:text="@string/orientation_label"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="0.08"
        android:gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_week_label"
        android:id="@+id/welcomeWeekButton"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:textSize="40dp"
        android:background="#ecd30d"
        android:layout_weight=".25"
        android:textColor="#ffffff"
        android:clickable="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fall_and_winter_term_label"
        android:id="@+id/fallAndWinterTermButton"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:textSize="40dp"
        android:background="#de5f10"
        android:layout_weight=".25"
        android:textColor="#ffffff"
        android:clickable="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/spring_term_label"
        android:id="@+id/springTermButton"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:textSize="40dp"
        android:background="#dd100d"
        android:layout_weight=".25"
        android:textColor="#ffffff"
        android:clickable="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/textView4"
        android:background="#5cb3db"
        android:textColor="#ffffff"
        android:autoText="false"
        android:allowUndo="true"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_weight="1"
        android:gravity="center" />

</LinearLayout>
