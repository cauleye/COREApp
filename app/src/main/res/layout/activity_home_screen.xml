<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.lawrence.elijahcauley.coreapp.HomeScreenActivity"
   android:background="#a1e183"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#9dc9a2"
        android:layout_weight="0.06">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:id="@+id/backButton"
            android:background="#215368"
            android:text="@string/back_button_label"
            android:textColor="#e6fcfe" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/inboxButton"
            android:background="#215368"
            android:layout_marginLeft="180dp"
            android:textColor="#e6fcfe"
            android:text="@string/inbox_button_label" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/announcementsButton"
            android:background="#215368"
            android:layout_marginLeft="10dp"
            android:textColor="#e6fcfe"
            android:text="@string/announcements_button_label" />

    </LinearLayout>

    <Button
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:id="@+id/connectionsButton"
        android:layout_weight="0.03"
        android:clickable="true"
        android:onClick="goToConnectionsHome"
        android:allowUndo="true"
        android:text="@string/connections_label"
        android:textSize="45dp"
        android:background="#8fd4f3"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="350dp"
        android:layout_height="78dp"
        android:id="@+id/orientationButton"
        android:layout_weight="0.03"
        android:clickable="true"
        android:onClick="goToOrientation"
        android:allowUndo="true"
        android:text="@string/orientation_label"
        android:textSize="50dp"
        android:background="#8fd4f3"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="350dp"
        android:layout_height="74dp"
        android:id="@+id/resourcesButton"
        android:background="#8fd4f3"
        android:clickable="true"
        android:onClick="goToResources"
        android:text="@string/resources_label"
        android:textSize="50dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="350dp"
        android:layout_height="86dp"
        android:id="@+id/expectationsButton"
        android:background="#8fd4f3"
        android:clickable="true"
        android:onClick="goToExpectations"
        android:text="@string/expectations_string"
        android:textSize="45dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
